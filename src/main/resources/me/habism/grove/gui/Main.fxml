<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.habism.grove.gui.MainController">

    <!-- Top bar -->
    <top>
        <HBox alignment="TOP_RIGHT" spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button fx:id="statsButton" mnemonicParsing="false" prefHeight="24.0" prefWidth="48.0" text="Stats">
                <font>
                    <Font size="10.0" />
                </font>
            </Button>
        </HBox>
    </top>

    <!-- Bottom bar -->
    <bottom>
        <HBox alignment="BOTTOM_LEFT" spacing="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button fx:id="settingsButton" mnemonicParsing="false" text="Settings">
            <font>
               <Font name="System Bold" size="13.0" />
            </font></Button>
        </HBox>
    </bottom>

    <!-- Center layout -->
    <center>
        <VBox alignment="CENTER" spacing="30">
            <!-- Session Toggle Button -->
            <ToggleButton fx:id="toggleSessionButton" mnemonicParsing="false" onAction="#startStop" prefHeight="87.0" prefWidth="210.0" text="Start/Stop">
                <font>
                    <Font size="24.0" />
                </font>
            </ToggleButton>

            <!-- Session Count -->
            <HBox alignment="CENTER" spacing="10">
                <Label fx:id="sessionLabel" text="Session:">
                    <font>
                        <Font name="System Italic" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="sessionCountLabel" text="N">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </HBox>

            <!-- Time Focused -->
            <HBox alignment="CENTER" spacing="10">
                <Label fx:id="timeLabel" text="Time Focused:">
                    <font>
                        <Font name="System Italic" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="timeValueLabel" text="your time here">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
            </HBox>

            <!-- Visit Grove Button -->
            <Button fx:id="visitGroveButton" mnemonicParsing="false" text="Visit Grove" />
        </VBox>
    </center>

</BorderPane>
